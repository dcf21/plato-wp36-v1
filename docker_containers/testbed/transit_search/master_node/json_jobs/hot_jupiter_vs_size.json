{
  "test_name": "hot_jupiter_vs_size",
  "iterations": [
    {
      "name": "size",
      "log_range": [
        "0.02",
        "0.5",
        "10"
      ]
    }
  ],
  "task_list": [
    [
      {
        "task": "psls_synthesise",
        "job_name": "earth_vs_snr",
        "lc_directory": "test_output",
        "lc_filename": "hjvsize_${index}.gz",
        "lc_specs": {
          "duration": 90,
          "planet_radius": "${size}",
          "orbital_period": 4,
          "semi_major_axis": 0.05,
          "orbital_angle": 0
        }
      },
      {
        "task": "verify_lc",
        "job_name": "earth_vs_snr",
        "lc_source": "archive",
        "lc_directory": "test_output",
        "lc_filename": "hjvsize_${index}.gz"
      },
      {
        "task": "transit_search",
        "job_name": "earth_vs_snr_${index}",
        "lc_source": "archive",
        "lc_duration": 90,
        "tda_name": "tls",
        "lc_directory": "test_output",
        "lc_filename": "hjvsize_${index}.gz",
        "search_settings": {}
      }
    ]
  ]
}
