{
  "job_name": "bls_timing_long_periods",
  "iterations": [
    {
      "name": "cadence",
      "values": [900, 25]
    },
    {
      "name": "lc_length",
      "values": [
        "3 * month",
        "4 * month",
        "6 * month",
        "9 * month",
        "year",
        "2 * year"
      ]
    }
  ],
  "task_list": [
    {
      "task": "psls_synthesise",
      "target": {
        "filename": "btlp_${index}.gz"
      },
      "specs": {
        "duration": "${lc_length}",
        "enable_transits": 0,
        "sampling_cadence": "${cadence}"
      }
    },
    {
      "task": "transit_search",
      "source": {
        "filename": "btlp_${index}.gz"
      },
      "lc_duration": "${lc_length}",
      "tda_name": "bls_reference",
      "search_settings": {
        "period_min": 90
      }
    }
  ]
}
