{
  "job_name": "bls_timing_full_span",
  "iterations": [
    {
      "name": "lc_length",
      "values": [
        "7 * day",
        "10 * day",
        "14 * day",
        "21 * day",
        "28 * day",
        "1.5 * month",
        "2 * month",
        "2.5 * month",
        "3 * month",
        "4 * month",
        "6 * month",
        "9 * month",
        "year",
        "2 * year"
      ]
    }
  ],
  "task_list": [
    {
      "task": "psls_synthesise",
      "target": {
        "filename": "btfs_${index}.gz"
      },
      "specs": {
        "duration": "${lc_length}",
        "enable_transits": 0
      }
    },
    {
      "task": "transit_search",
      "source": {
        "filename": "btfs_${index}.gz"
      },
      "lc_duration": "${lc_length}",
      "tda_name": "bls_reference"
    }
  ]
}
