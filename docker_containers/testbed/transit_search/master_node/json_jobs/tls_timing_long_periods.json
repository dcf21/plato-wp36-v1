{
  "test_name": "tls_timing_long_periods",
  "iterations": [
    {
      "name": "lc_length",
      "values": [
        "3 * month",
        "4 * month",
        "6 * month",
        "9 * month",
        "year",
        "2 * year"
      ]
    }
  ],
  "task_list": [
    [
      {
        "task": "psls_synthesise",
        "job_name": "tls_timing_long_periods",
        "lc_directory": "test_output",
        "lc_filename": "ttlp_${index}.gz",
        "lc_specs": {
          "duration": "${lc_length}",
          "planet_radius": 0.089114866,
          "orbital_period": 365,
          "semi_major_axis": 1,
          "orbital_angle": 0
        }
      },
      {
        "task": "transit_search",
        "job_name": "tls_timing_long_periods",
        "lc_source": "archive",
        "lc_duration": "${lc_length}",
        "tda_name": "tls",
        "lc_directory": "test_output",
        "lc_filename": "ttlp_${index}.gz",
        "search_settings": {
          "min_period": 90
        }
      }
    ]
  ]
}
